<div id="<%= dom_id pantry_item %>" class="pantry-item">
  <div class="image-container">
    <%= image_tag pantry_item.img_url if pantry_item.img_url.present? %>
  </div>
  <p class="centered-text padded">
    <%= pantry_item.name %>
  </p>
  <% if local_assigns[:show_barcode] %>
    <p class="centered-text padded">
      <strong>Barcode:</strong>
      <%= pantry_item.barcode %>
    </p>
    <p class="centered-text padded">
      <strong>You have:</strong>
      <%= pantry_item.quantity %>
    </p>
  <% end %>
</div>