<div id="<%= dom_id recipe %>" class="recipe-container large-text padded">
  <% if local_assigns[:icon]%>

    <%= image_tag("recipes.svg", alt: "Recipe icon", class: "media-icon") %>
  <% end %>

  <div class="image-container">
    <% if recipe.image.attached? %>
      <%= image_tag recipe.image, class: "image-card" %>
    <% else %>
      <strong> No image attached </strong>
    <% end %>

  </div>

  <p class="centered-text">
    <%= recipe.name %>
  </p>
  <% if local_assigns[:info]%>
    <strong> Ingredients: </strong>

    <div class="ingredients-container">
      <% if recipe.recipe_items.any? %>
        <ul>
          <% recipe.recipe_items.each do |item| %>
            <li>
              <strong><%= item.name %>:</strong> <%= item.amount %>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p>No ingredients listed for this recipe.</p>
      <% end %>
    </div>

    <p>
      <strong>Procedure:</strong>
      <%= recipe.procedure %>
    </p>

    <p>
      <strong>Servings:</strong>
      <%= recipe.servings %>
    </p>

    <p>
      <strong>Difficulty:</strong>
      <%= recipe.difficulty %>
    </p>

    <p>
      <strong>Prep time:</strong>
      <%= recipe.prep_time %>
    </p>
  <% end %>

  <% if local_assigns[:counter]%>
    <p class="recipe-counter"> <%= counter %></p>

  <% end %>
</div>
