<p style="color: green"><%= notice %></p>

<% content_for :title, "Recipes" %>
<div class="recipe-page">
  <h1>Recipes</h1>

  <div id="recipes">
    <% @recipes.each do |recipe| %>
      <%= render recipe, info: false %>
      <p>
        <%= link_to "Show this recipe", recipe %>
      </p>
    <% end %>
  </div>

  <%= link_to "New recipe", new_recipe_path %>

</div>
